@model GradeDetail

@{
    Layout = null;
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Опис
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Оцінка
        </dt>
        <dd class="col-sm-10">
            @Model.Mark
        </dd>
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
    </dl>
    
    <form asp-action="GradeDetailDelete">
        <input type="hidden" asp-for="GradeDetailID" />
        <input type="submit" value="Видалити" class="btn btn-danger" style="width:50%" />        
    </form>
</div>
