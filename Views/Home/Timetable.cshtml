@model TimetableViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Студент</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand font-weight-bold" style="color:darkblue; font-size:20px;" asp-area="" asp-controller="Home" asp-action="Student">Розклад занять</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:darkblue; font-size:15px;" asp-area="" asp-controller="Home" asp-action="Timetable">Розклад</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:darkblue; font-size:15px;" asp-area="" asp-controller="Home" asp-action="Student">Предмети</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <style>
            .table-border{
                border-top: solid;
                border-top-color:darkblue;
            }
        </style>
        <div class="container">
            <div class="d-flex flex-row">
                <div class="p-2">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th style="color:darkblue">Понеділок</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Timetable t in Model.Mondey)
                            {
                                <tr>
                                    <td style="color:darkblue">@t.Subject.SubjectName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-2">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th style="color:darkblue">Вівторок</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Timetable t in Model.Tuesday)
                            {
                                <tr>
                                    <td style="color:darkblue">@t.Subject.SubjectName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-2">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th style="color:darkblue">Середа</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Timetable t in Model.Wednesday)
                            {
                                <tr>
                                    <td style="color:darkblue">@t.Subject.SubjectName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-2">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th style="color:darkblue">Четвер</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Timetable t in Model.Thursday)
                            {
                                <tr>
                                    <td style="color:darkblue">@t.Subject.SubjectName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="p-2">
                    <table class="table table-border">
                        <thead>
                            <tr>
                                <th style="color:darkblue">П'ятниця</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Timetable t in Model.Friday)
                            {
                                <tr>
                                    <td style="color:darkblue">@t.Subject.SubjectName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <footer class="border-top footer text-muted" style="background-color:darkblue">
        <div class="container" style="color:white">
            &copy; 2021 - Електронний журнал школяра    -   Розробник Дзюрах Іван
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
